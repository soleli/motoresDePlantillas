extends index.pug

block content
    div.container
        div.row.d-flex.justify-content-center
             div.col-lg-8
                form(action=" " method="POST" enctype="multipart/form-data")
                    label(for="name") Title:
                    input(
                        type="text"
                        id="name"
                        name="title"
                        class="form-control"
                    )
                    label(for="price") Price:
                    input(
                        type="text"
                        id="price"
                        name="price"
                        class="form-control"
                    )
                    label(for="image") Image:
                    input(
                        type="file"
                        id="image"
                        name="image"
                        class="form-control"
                    )

                    input(
                        class="btn btn-success" 
                        type="submit"
                        name="Guardar"
                    )